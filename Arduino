#define BLYNK_TEMPLATE_ID "TMPL25ae-FeSC"
#define BLYNK_TEMPLATE_NAME "Regador Autom√°tico"
#define BLYNK_AUTH_TOKEN "ubGKcMKVvmDMUYQ_cB7j3de1lZgAeyTc"

#define BLYNK_PRINT Serial

#include <ESP8266WiFi.h>
#include <BlynkSimpleEsp8266.h>

char ssid[] = "WIFI_HOME";
char pass[] = "Mackenzie2025";

#define sensor A0
#define waterPump D1

BlynkTimer timer;

int estadoBotao = 0;

void setup() {
  Serial.begin(115200);

  pinMode(waterPump, OUTPUT);
  digitalWrite(waterPump, HIGH); // bomba desligada

  Blynk.begin(BLYNK_AUTH_TOKEN, ssid, pass);

  timer.setInterval(3000L, enviarUmidade); // a cada 3s
}

BLYNK_WRITE(V1) {
  estadoBotao = param.asInt();
  digitalWrite(waterPump, estadoBotao == 1 ? LOW : HIGH);
}

void enviarUmidade() {
  int leitura = analogRead(sensor);
  int umidade = map(leitura, 0, 1024, 100, 0); // quanto maior a leitura, menor a umidade
  Blynk.virtualWrite(V0, umidade);
  Serial.print("Umidade: ");
  Serial.print(umidade);
  Serial.print(" (Raw: ");
  Serial.print(leitura);
  Serial.println(")");
}

void loop() {
  Blynk.run();
  timer.run();
}
